	header
		nav.navbar.navbar-fixed-top.navbar-default
			.container
				.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar-auth")
						span.icon-bar
						span.icon-bar
						span.icon-bar

				.navbar-collapse.collapse#navbar-auth
					ul.nav.navbar-nav.navbar-default
						li
							a(ui-sref='industries.top') Home
					ul.nav.navbar-nav.navbar-right
						li(ng-show='user')
							a(ui-sref='account') My Account
						li(ng-show='user' ng-controller='AuthController')
							a(ng-click='logout()') Logout
						li(ng-show='!user')
							a(ui-sref='register') Register
						li(ng-show='!user')
							a(ui-sref='login') Login


